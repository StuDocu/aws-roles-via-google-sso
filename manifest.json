{
    "manifest_version": 3,
  
    "name": "AWS AlwaysON",
    "description": "Stay logged in to AWS console and to get STS credentials for CLI at the click of a button.",
    "version": "0.6.1",
    "action": {
     "default_popup": "menu.html"
    },
    "icons": { "16": "icon16.png",
      "48": "icon48.png",
     "128": "icon128.png" },
    "permissions": [
    "storage",
     "alarms",
     "cookies"
    ],
    "host_permissions":[
     "https://accounts.google.com/AccountChooser",
     "https://signin.aws.amazon.com/saml",
     "https://console.aws.amazon.com/console/home",
     "https://sts.amazonaws.com/*",
     "https://accounts.google.com/o/saml2/initsso/*"
     ],
     "background": {
        "service_worker": "background.js",
        "type":"module"
      },
      "options_ui": {
        "page": "options.html",
        "open_in_tab": false
      }
  }